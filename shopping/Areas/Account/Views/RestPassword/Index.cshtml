@model RestPassword
@{

}
@if (TempData.ContainsKey("Msg"))
{
    @if (TempData.ContainsKey("Code"))
    {
        @switch (TempData["Code"])
        {
            case 0 :
                <div class="alert alert-success text-center" >@TempData["Msg"]</div>
                break;
            case 1:
            <div class="alert alert-primary text-center" >@TempData["Msg"]</div>
                break;
 case 2:
            <div class="alert alert-warning text-center" >@TempData["Msg"]</div>
                break;
 case 3:
                <div class="alert alert-danger text-center" >@TempData["Msg"]</div>
                break;
            default:
               <div class="alert alert-info text-center" >@TempData["Msg"]</div>
                break;
        }
    }else
    {
        <div class="alert alert-info text-center" >@TempData["Msg"]</div>
    }

}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <form  asp-controller="Account" asp-action="RestPassword" method="post">
                <div class="form-group">
                    <label asp-for="PasswordOld"></label>
                    <input class="form-control" id="password"asp-for="PasswordOld">
                    <span asp-validation-for="PasswordOld" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" ></label>
                    <input type="password" class="form-control" id="password" asp-for="Password" >
                    <span asp-validation-for="Password" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" ></label>
                    <input type="password" class="form-control" id="password" asp-for="ConfirmPassword" >
                    <span asp-validation-for="ConfirmPassword" class="text-danger" ></span>
                </div>
               
                <button type="submit" class="btn btn-primary btn-block">تغيير كلمة المرور</button>
            </form>
        </div>
    </div>
</div>