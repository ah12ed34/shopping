@model PagerModel
@{
}

<nav >
    <ul class="pagination justify-content-center">
        @if (@Model.CurrentPage>1)
        {
            <li class="page-item"><a class="page-link" asp-action="@Model.Action" 
                    asp-route-Sort="@Model.Sort"
                    asp-route-Filter="@Model.Filter"
                    asp-route-Search="@Model.Search"
                    asp-route-pageSize="@Model.PageSize"
                    asp-route-page="@(@Model.CurrentPage-1)"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
        }
        else
        {
            <li class="page-item disabled"><span class="page-link"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></span></li>
        }
        
        @for (int i = @Model.StartPage; i <= @Model.EndPage; i++)
        {
            if (i == @Model.CurrentPage )
            {
                <li class="page-item active"><span class="page-link">@i <span class="sr-only">(current)</span></span></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="@Model.Action" 
                    asp-route-Sort="@Model.Sort"
                    asp-route-Filter="@Model.Filter"
                    asp-route-Search="@Model.Search"
                    asp-route-pageSize="@Model.PageSize"
                    asp-route-page="@i"
                    >@i</a></li>
            }
        }
        
        @if (@Model.CurrentPage<@Model.TotalPages)
        {
            <li class="page-item"><a class="page-link" asp-action="@Model.Action" 
                    asp-route-Sort="@Model.Sort"
                    asp-route-Filter="@Model.Filter"
                    asp-route-Search="@Model.Search"
                    asp-route-pageSize="@Model.PageSize"
                    asp-route-page="@(@Model.CurrentPage+1)" aria-label="Next"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
}
else
{
<li class="page-item disabled"><span class="page-link"><span aria-hidden="true">»</span><span class="sr-only">Next</span></span></li>
}
</ul>

</nav>

